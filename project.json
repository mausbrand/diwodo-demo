{
    "cli-version": "2.0.3",
    "default": {
        "application_name": "diwodo-demo-viur3",
        "builds": {
            "admin": {
                "command": "viur package install admin",
                "kind": "exec",
                "version": "4.4.8"
            },
            "app": {
                "command": "build",
                "kind": "npm",
                "source": "app"
            },
            "site": {
                "command": "build",
                "kind": "npm",
                "source": "site"
            }
        },
        "distribution_folder": "./deploy",
        "sources_folder": "./sources",
        "version": "$(year)-$(month)-$(day)-$(user)-dev"
    },
    "format": "2.0.0",
    "live": {
        "version": "$(year)-$(month)-$(day)-$(user)"
    }
}
